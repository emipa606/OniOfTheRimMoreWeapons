<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Combat Extended</li>
    </mods>
    <match Class="PatchOperationFindMod">
      <mods>
        <li>Oni of the Rim: Combat Extended</li>
      </mods>
      <nomatch Class="PatchOperationSequence">
        <operations>
          <li Class="PatchOperationRemove">
            <xpath>Defs/ThingDef[defName="Oni_ShortSword"]</xpath>
          </li>
          <li Class="PatchOperationRemove">
            <xpath>Defs/ThingDef[defName="Oni_Kurabu"]</xpath>
          </li>
          <li Class="PatchOperationRemove">
            <xpath>Defs/ThingDef[defName="Oni_Bow"]</xpath>
          </li>
          <li Class="PatchOperationRemove">
            <xpath>Defs/ThingDef[defName="Oni_Bow_Yokai"]</xpath>
          </li>
          <li Class="PatchOperationRemove">
            <xpath>Defs/ThingDef[defName="Oni_WarDagger_ToxicGun"]</xpath>
          </li>
        </operations>
      </nomatch>
      <match Class="PatchOperationSequence">
        <operations>
          <li Class="PatchOperationRemove">
            <xpath>Defs/ThingDef[defName="Oni_Bow_Yokai"]</xpath>
          </li>
        </operations>
      </match>
    </match>
  </Operation>
</Patch>